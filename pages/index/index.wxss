/* pages/index/index.wxss */
page {
  background: #f5f7fb;
  color: #222;
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
}

.container {
  padding: 20rpx;
}

.header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.title {
  font-size: 44rpx;
  font-weight: bold;
  margin-right: 20rpx;
}

.tag {
  background: #eef1ff;
  color: #4a6cf7;
  padding: 8rpx 16rpx;
  border-radius: 999rpx;
  font-size: 24rpx;
}

.section-title {
  font-size: 36rpx;
  margin: 48rpx 0 20rpx 0;
  border-left: 8rpx solid #4a6cf7;
  padding-left: 16rpx;
  font-weight: bold;
}

.plan-title {
  font-size: 28rpx;
  margin-bottom: 16rpx;
  color: #333;
  font-weight: bold;
  line-height: 1.4;
}

.card {
  background: #fff;
  border-radius: 20rpx;
  padding: 32rpx 36rpx;
  box-shadow: 0 12rpx 32rpx rgba(0, 0, 0, 0.06);
  margin-bottom: 32rpx;
}

.grid {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.grid2 {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.form-item {
  display: flex;
  flex-direction: column;
}

.label {
  font-size: 22rpx;
  color: #555;
  margin-bottom: 6rpx;
  line-height: 1.4;
  word-wrap: break-word;
}

.input {
  width: 100%;
  padding: 8rpx 12rpx;
  border-radius: 8rpx;
  border: 2rpx solid #d0d4e0;
  font-size: 24rpx;
  box-sizing: border-box;
  height: 60rpx;
}

.input:focus {
  border-color: #4a6cf7;
  box-shadow: 0 0 0 4rpx rgba(74, 108, 247, 0.18);
}

.btn {
  width: 100%;
  padding: 20rpx 48rpx;
  border-radius: 999rpx;
  border: none;
  background: #4a6cf7;
  color: #fff;
  font-size: 28rpx;
}

/* 结果样式 */
.result {
  font-family: "SF Pro Display", Inter, Roboto, sans-serif;
  white-space: normal;
  line-height: 1.7;
  padding: 40rpx;
  background: #ffffff;
  border-radius: 32rpx;
  box-shadow: 0 24rpx 64rpx rgba(0, 0, 0, 0.08);
  border: 2rpx solid #e6e8f0;
}

.result-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #2c3e50;
  margin-bottom: 32rpx;
  border-left: 8rpx solid #4a6cf7;
  padding-left: 20rpx;
}

.section {
  background: #fafbff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 36rpx;
  border: 2rpx solid #eef0f6;
}

.section-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #4a6cf7;
  margin-left: 12rpx;
}

.icon {
  font-size: 36rpx;
}

.metric-grid {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-top: 24rpx;
}

.metric {
  background: #ffffff;
  padding: 24rpx;
  border-radius: 20rpx;
  border: 2rpx solid #e8ebf3;
  text-align: center;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.04);
}

.metric-label {
  font-size: 24rpx;
  color: #777;
  margin-bottom: 8rpx;
  display: block;
}

.metric-value {
  font-size: 36rpx;
  font-weight: 700;
  color: #2c3e50;
  display: block;
}

.metric-sub {
  font-size: 24rpx;
  color: #999;
  margin-top: 4rpx;
  display: block;
}

.emphasis {
  color: #e67e22;
  font-weight: 700;
  font-size: 36rpx;
}

.good {
  color: #27ae60;
  font-weight: 700;
}

.warn {
  color: #c0392b;
  font-weight: 700;
}

.desc {
  font-size: 28rpx;
  line-height: 1.6;
  margin-bottom: 16rpx;
  display: block;
}

/* 小屏幕适配 */
@media (max-width: 750rpx) {
  .container {
    padding: 16rpx;
  }
  
  .card {
    padding: 24rpx;
    margin-bottom: 24rpx;
  }
  
  .title {
    font-size: 38rpx;
  }
  
  .section-title {
    font-size: 32rpx;
  }
}